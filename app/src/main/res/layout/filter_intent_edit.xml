<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_floor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_floor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"

            android:gravity="center_vertical"
            android:text="Flooring"/>

        <TextView
android:gravity="right"
            android:id="@+id/tv_floor_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_floor"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/jiantou_right"
            android:singleLine="true"
            android:text=""/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_hui"/>

    <RelativeLayout
        android:id="@+id/rl_internal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_internal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"

            android:gravity="center_vertical"
            android:text="Internal Facilities"/>

        <TextView
            android:gravity="right"
            android:id="@+id/tv_internal_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_internal"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/jiantou_right"
            android:singleLine="true"
            android:text=""/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_hui"/>

    <RelativeLayout
        android:id="@+id/rl_features"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_features"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"

            android:gravity="center_vertical"
            android:text="Features"/>

        <TextView
            android:gravity="right"
            android:id="@+id/tv_features_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_features"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/jiantou_right"
            android:singleLine="true"
            android:text=""/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_hui"/>

    <RelativeLayout
        android:id="@+id/rl_decoration"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_decoration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"

            android:gravity="center_vertical"
            android:text="Decoration"/>

        <TextView
            android:gravity="right"
            android:id="@+id/tv_decoration_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_decoration"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/jiantou_right"
            android:singleLine="true"
            android:text=""/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_hui"/>

    <RelativeLayout
        android:id="@+id/rl_build_amenties"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_build_amenties"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"

            android:gravity="center_vertical"
            android:text="Building Amenities"/>

        <TextView
            android:gravity="right"
            android:id="@+id/tv_build_amenties_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_build_amenties"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/jiantou_right"
            android:singleLine="true"
            android:text=""/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_hui"/>

    <RelativeLayout
        android:id="@+id/rl_community"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_community"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"

            android:gravity="center_vertical"
            android:text="Community And Neighborhood"/>

        <TextView
            android:gravity="right"
            android:id="@+id/tv_community_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_community"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/jiantou_right"
            android:singleLine="true"
            android:text=""/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_hui"/>
</LinearLayout>