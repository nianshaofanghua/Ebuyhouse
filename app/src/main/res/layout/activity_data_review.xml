<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yidankeji.cheng.ebuyhouse.community.activity.DataReviewActivity">

    <FrameLayout
        android:id="@+id/housetype_yincang"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_red"
        android:visibility="gone"/>

    <include layout="@layout/action_bar_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/examine_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:scaleType="centerInside"
            android:src="@mipmap/examine"/>


        <TextView
            android:id="@+id/examine_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/examine_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Under review"
            android:textColor="@color/black"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/examine_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/examine_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Your information is being reviewed please be patient"
            android:textColor="@color/black"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/urge_sell"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/examine_hint"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_text_bg_zhutise"
            android:gravity="center"
            android:text="Urge sellers"
            android:textColor="@color/white"
          />

    </RelativeLayout>
</LinearLayout>
