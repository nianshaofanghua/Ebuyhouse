<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_little_gray"
    android:orientation="vertical"
    tools:context="com.yidankeji.cheng.ebuyhouse.community.activity.InterestCircleMessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/housetype_yincang"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_red"
            android:visibility="gone"/>

        <include layout="@layout/action_bar_title"/>

        <RelativeLayout
            android:id="@+id/rl_pic"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Circle picture"
                android:textColor="@color/black"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/iv_tag1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="center"
                android:src="@mipmap/jiantou_right"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"

                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_tag1"
                android:scaleType="centerCrop"
                android:src="@mipmap/touxiang"
                app:riv_oval="true"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_group_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Group name"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

                <ImageView
                    android:id="@+id/iv_tag2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="center"
                    android:src="@mipmap/jiantou_right"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_tag2"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="yuang yuang"
                    android:textColor="@color/text_use_gray"
                    android:textSize="14dp"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_hui"/>

            <RelativeLayout
                android:id="@+id/rl_insterest_label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Interest"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

                <ImageView
                    android:id="@+id/iv_interest"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="center"
                    android:src="@mipmap/jiantou_right"/>

                <TextView
                    android:id="@+id/tv_label"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_interest"
                    android:ellipsize="end"

                    android:gravity="center_vertical|right"
                    android:maxLines="1"

                    android:text=""
                    android:textColor="@color/text_use_gray"
                    android:textSize="14dp"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/rl_people_num"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Circle of interest"
                android:textColor="@color/text_use_gray"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"

                android:layout_toLeftOf="@+id/iv_tag4"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textColor="@color/text_use_gray"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/iv_tag4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="center"
                android:src="@mipmap/jiantou_right"/>
        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white">

            <GridView
                android:id="@+id/friend_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:numColumns="6"
                android:verticalSpacing="10dp"
                />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_announcement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_title_ac"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Group announcement"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <ImageView
                android:id="@+id/iv_tag3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:scaleType="center"
                android:src="@mipmap/jiantou_right"/>

            <TextView
                android:id="@+id/tv_group_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_ac"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="a sales management or business development position where my strategic and consultative selling,cross-cultural relationship building,team facilitation,business management,organizational insight,and advanced technical skills will be continually challenged. i aspire to senior management responsibility and seek a company that embraces growth and change,where compensation is"
                android:textColor="@color/text_use_gray"
                android:textSize="14dp"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/gray_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="gone"/>
</RelativeLayout>
