<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:text="Apartment Number"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/apt_num"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_edit_biankuang"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:inputType="number"
        android:textColor="@color/text_heise"

        android:textSize="14sp"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="Street Name"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_street_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_edit_biankuang"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/text_heise"

        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="City"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/address_city"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_edit_biankuang"
                android:gravity="center_vertical"
                android:hint="New YOK"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/text_heise"
                android:textSize="14sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="State"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_edit_biankuang"
                android:drawableRight="@mipmap/jiantou_down"
                android:gravity="center|left"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="3dp"
                android:text="NY"
                android:textColor="@color/text_gary"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="Zip code"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/zip_code"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_edit_biankuang"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/text_heise"

        android:textSize="14sp"
        android:visibility="gone"/>
</LinearLayout>