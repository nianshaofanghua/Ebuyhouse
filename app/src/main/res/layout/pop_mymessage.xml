<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_hui">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/baise">
        <ImageView
            android:id="@+id/pop_mymessagelist_dismiss"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/jiantou_left_zhutise"
            android:scaleType="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/zhutise"
            android:text="My Message"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/offer"
            android:layout_alignParentRight="true"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
         android:gravity="center_vertical"
            android:textColor="@color/zhutise"
            android:text="View credentials"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/text_hei"
            android:layout_below="@+id/pop_mymessagelist_dismiss"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="10dp"
        android:background="@color/baise"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/pop_mymessagelist_touxiang"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/touxiang"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/pop_mymessagelist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"
            android:textColor="@color/text_heise"/>
        <TextView
            android:id="@+id/pop_mymessagelist_reply"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_text_bg_zhutise"
            android:text="Reply"
            android:gravity="center"
            android:textColor="@color/baise"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/pop_mymessagelist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_heise"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/pop_mymessagelist_touxiang"
            android:layout_toLeftOf="@+id/pop_mymessagelist_time"/>
        <TextView
            android:id="@+id/pop_mymessagelist_bianhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_hei"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/pop_mymessagelist_touxiang"
            android:layout_toLeftOf="@+id/pop_mymessagelist_time"
            android:layout_below="@+id/pop_mymessagelist_name"/>
        <TextView
            android:id="@+id/pop_mymessagelist_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_hei"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/pop_mymessagelist_touxiang"
            android:layout_toLeftOf="@+id/pop_mymessagelist_time"
            android:layout_below="@+id/pop_mymessagelist_bianhao"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/pop_mymessagelist_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/line_hui"
        android:dividerHeight="1dp"
        android:listSelector="#00000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_heise"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/pop_mymessagelist_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_edit_biankuang"/>
        <TextView
            android:id="@+id/pop_mymessagelist_submit"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="submit"
            android:textColor="@color/text_heise"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>