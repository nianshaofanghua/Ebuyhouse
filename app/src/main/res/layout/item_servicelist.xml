<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_servicelist_layout">

   <ImageView
       android:id="@+id/item_servicelist_image"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:src="@mipmap/bbb01"
       android:layout_margin="10dp"
       android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_servicelist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_heise"
            android:singleLine="true"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_servicelist_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_servicelist_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/text_heise"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/item_servicelist_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/text_heise"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/pro_phone"/>
        <TextView
            android:id="@+id/item_servicelist_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/text_heise"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/pro_address"/>

    </LinearLayout>

</LinearLayout>