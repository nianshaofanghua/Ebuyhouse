        <TextView
            android:id="@+id/productdetais_callphone"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_layout_zhutisebiankuang"
            android:gravity="center"
            android:text="Call"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/productdetais_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/productdetais_callphone"
            android:layout_toRightOf="@+id/productdetais_touxiang"
            android:gravity="center_vertical"
            android:minWidth="50dp"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/productdetais_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productdetais_name"
            android:layout_toRightOf="@+id/productdetais_touxiang"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@color/text_hei"/>
    </RelativeLayout>

