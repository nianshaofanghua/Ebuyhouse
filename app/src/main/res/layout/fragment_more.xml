<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_hui"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@mipmap/more_bg">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/morefragment_touxiang"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/touxiang"
            android:scaleType="centerCrop"
            app:riv_border_width="1dp"
            app:riv_border_color="@color/baise"
            app:riv_oval="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/morefragment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dangdang"
            android:textColor="@color/baise"
            android:gravity="center_horizontal"
            android:layout_below="@+id/morefragment_touxiang"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/baise"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="20dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/morefragment_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
