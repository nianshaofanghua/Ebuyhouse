<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_servicerepair_iamge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/demo01"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/item_servicerepair_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Love apartment"
            android:textColor="@color/text_hei"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regin:Atlanta,GA"
            android:textColor="@color/text_hei"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regin:Atlanta,GA"
            android:textColor="@color/text_hei"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Reservation"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="right"
            android:background="@drawable/shape_layout_zhutisebiankuang"/>
    </LinearLayout>
</LinearLayout>