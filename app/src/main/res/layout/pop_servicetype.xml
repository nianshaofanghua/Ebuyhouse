<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_servicetype_bg"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/pop_servicetype_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Repair"
            android:textColor="@color/text_heise"
            android:gravity="center"
            android:background="@drawable/shape_servicetype_bg"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_hui"/>

        <ListView
            android:id="@+id/pop_servicetype_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:listSelector="#00000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_hui"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pop_servicetype_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Cancel"
                android:textColor="@color/text_hei"
                android:gravity="center"
                android:background="@drawable/shape_servicetype_bg"/>
            <TextView
                android:id="@+id/pop_servicetype_apply"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Apply"
                android:textColor="@color/zhutise"
                android:gravity="center"
                android:background="@drawable/shape_servicetype_bg"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>