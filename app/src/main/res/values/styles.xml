<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"/>

    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@color/baise</item>
    </style>

    <!-- 首页（第一级页面不让Activity透明） -->
    <style name="mainPageStyle" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- 非首页（非第一级页面让Activity透明） -->
    <style name="otherPageStyle" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="NotitleTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>

    </style>

    <!--对话框 弹出动画-->
    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <!--tablayout-->
    <style name="MyTabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tablayout_background</item>
        <item name="tabIndicatorColor">#00000000</item>
        <item name="tabIndicatorHeight">1dp</item>
    </style>

    <style name="ThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:background">@mipmap/staractivityimage</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyRadioButtonLeft" >
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/select_textcolor</item>
        <item name="android:background">@drawable/select_readiogroup_bgleft</item>
    </style>
    <style name="MyRadioButtonCenter" >
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/select_textcolor</item>
        <item name="android:background">@drawable/select_readiogroup_bgconter</item>
    </style>
    <style name="MyRadioButtonRight" >
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/select_textcolor</item>
        <item name="android:background">@drawable/select_readiogroup_bgright</item>
    </style>

    <style name="PermissionBlueStyle">
        <item name="PermissionTitleColor">@color/black</item>
        <item name="PermissionMsgColor">@color/black</item>
        <item name="PermissionItemTextColor">@color/black</item>
        <item name="PermissionButtonBackground">@drawable/permission_clickbg</item>
        <item name="PermissionBackround">@drawable/shape_bg_white</item>
        <item name="PermissionButtonTextColor">@android:color/white</item>
    </style>

    <style name="myline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_hui</item>
    </style>
    <style name="myline_kuan">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/line_hui</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <style name="TabLayoutTextStyless" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- window 透明的-->
    <style name="Theme.AppCompat.Translucent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="text_body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_sub</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="text_subhead_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/text_subhead</item>
    </style>
</resources>
